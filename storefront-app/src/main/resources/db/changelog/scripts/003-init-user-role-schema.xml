<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="developer">
        <preConditions onFail="MARK_RAN">
            <and>
                <not>
                    <tableExists tableName="user_role" schemaName="${schemaName}"/>
                </not>
            </and>
        </preConditions>
        <createTable tableName="user_role" schemaName="${schemaName}">
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_user" references="users(id)"/>
            </column>
            <column name="role_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_role" references="roles(id)"/>
            </column>
        </createTable>
        <addUniqueConstraint
                columnNames="user_id, role_id"
                constraintName="user_role_unique_pair"
                tableName="user_role"
        />
    </changeSet>
</databaseChangeLog>